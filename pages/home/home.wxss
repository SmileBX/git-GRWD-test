/* pages/home/home.wxss */
.home-index{
  background:rgba(247, 242, 242, 0.973);
}
.section{
  display: flex;
  align-items: center;
  background:rgb(15, 15, 15);
  padding:10rpx;
  margin-top:5rpx;
  position:relative;
}
.section,.section input,.section button{
  height:70rpx;
}
.section input{
  border:1px solid #ccc;
  flex-grow: 1;
  margin-right:15rpx;
  background:#fff;
  border-radius:3px;
  line-height:70rpx;
  padding-left:70rpx;
  font-size:14px;
}
.section image{
  position:absolute;
  width:8%;
  left:20rpx;
}
/*轮播图*/
.swiper{
  margin-top:3rpx;
}
.swiper image{
  height:100%;
}
/*图标列表*/
.home-list{
  display:flex;
  justify-content: space-around;
  padding:20rpx;
  background: #fff;
}
.home-list .home-item{
  width:25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size:12px;
}
.home-list .home-item image{
  width:50%;
}
